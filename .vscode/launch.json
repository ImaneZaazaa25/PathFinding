{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Emscripten: Compile to WebAssembly",
            "type": "cppdbg",
            "request": "launch",
            "program": "node",
            "args": [
                "${workspaceFolder}/cpp/pathfinder.js"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Emscripten: Build Project"
        }
    ]
}